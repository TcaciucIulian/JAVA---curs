<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased"/>

    <Button fx:id="helloButton" text="Hello!" GridPane.rowIndex="1" GridPane.columnIndex="0" textFill="blue" onAction="#onClickButton"/>
    <Button fx:id="actionButton" text="Action!" GridPane.rowIndex="2" GridPane.columnIndex="0" textFill="blue" onAction="#onClickButton"/>
    <Button fx:id="byeButton" text="Say bye!" GridPane.rowIndex="3" GridPane.columnIndex="0" textFill="blue" onAction="#onClickButton"/>
</GridPane>