<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:id="gridPane">
    <Button text="Open...." onAction="#handleClick" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Button two" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Button three" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="button4" text="Button four" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    <Button text="Button five" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <Label fx:id="label" text="JavaFX effects" GridPane.rowIndex="2" GridPane.columnIndex="0" onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
    rotate="90"/>
    <Hyperlink text="www.javafx.com" GridPane.rowIndex="4" GridPane.columnIndex="0" onAction="#handleLinkClick"/>
</GridPane>